<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_selected_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:textSize="30sp" />

        <Chronometer
            android:id="@+id/chrono_activity_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_selected_activity"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="141dp"
            android:format="%H:%M:%S"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/tv_acc_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chrono_activity_time"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/tv_y"
            android:layout_toRightOf="@+id/tv_y" />

        <TextView
            android:id="@+id/tv_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_acc_y"
            android:layout_alignBottom="@+id/tv_acc_y"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:text="@string/tv_x_coordinate" />

        <TextView
            android:id="@+id/tv_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_acc_y"
            android:layout_alignBottom="@+id/tv_acc_y"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="82dp"
            android:layout_marginRight="82dp"
            android:text="@string/tv_z_coordinate" />

        <TextView
            android:id="@+id/tv_acc_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_x"
            android:layout_alignBottom="@+id/tv_x"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/tv_x"
            android:layout_toRightOf="@+id/tv_x" />

        <TextView
            android:id="@+id/tv_y"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/tv_acc_x"
            android:layout_marginLeft="155dp"
            android:layout_marginStart="155dp"
            android:text="@string/tv_y_coordinate" />

        <TextView
            android:id="@+id/tv_acc_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/tv_z"
            android:layout_alignBottom="@+id/tv_z"
            android:layout_alignLeft="@+id/tv_z"
            android:layout_alignStart="@+id/tv_z"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp" />

        <Button
            android:id="@+id/button_start"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_blue_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="80dp"
            android:text="@string/button_start_activity" />

        <Button
            android:id="@+id/button_reset"
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="@android:color/holo_orange_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="80dp"
            android:text="@string/button_reset_activity" />


    </RelativeLayout>
</LinearLayout>